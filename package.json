{
  "name": "@rxdi/graphql",
  "version": "0.0.261",
  "repository": {
    "type": "git",
    "url": "https://github.com/rxdi/graphql.git"
  },
  "scripts": {
    "postpublish": "git push -f ssh://git@gitlab.youvolio.com:522/rxdi/graphql.git && git push --tags && git push ssh://git@gitlab.youvolio.com:522/rxdi/graphql.git --tags",
    "lint": "tslint -c tslint.json 'development/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "author": {
    "name": "Kristian Tachev(Stradivario)",
    "email": "kristiqn.tachev@gmail.com"
  },
  "keywords": [
    "graphql",
    "gapi",
    "node"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rxdi/graphql/issues"
  },
  "homepage": "https://github.com/rxdi/graphql#readme",
  "module": "index.js",
  "typings": "index.d.ts",
  "dependencies": {
    "@gapi/playground": "^1.3.3",
    "apollo-errors": "^1.9.0",
    "apollo-server-hapi": "^1.3.6",
    "apollo-server-module-graphiql": "1.3.4",
    "boom": "^7.2.0",
    "fs-extra": "^6.0.1",
    "graphql": "^0.13.2"
  },
  "devDependencies": {
    "@rxdi/core": "^0.0.259",
    "@rxdi/hapi": "^0.0.259",
    "@types/graphql": "^0.13.1",
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.1.4",
    "@types/node": "^10.3.4",
    "jest": "^22.4.2",
    "jest-cli": "^22.4.2",
    "ts-jest": "^22.4.0",
    "tslint": "^5.8.0",
    "tslint-language-service": "^0.9.8",
    "typescript": "^3.0.1",
    "rxjs": "6.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "rootDir": "./",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/development/.*\\.spec.(ts|tsx|js)$",
    "verbose": true,
    "collectCoverage": true
  }
}
